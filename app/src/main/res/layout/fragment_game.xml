<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#fff"
            android:textSize="30sp"/>
    </RelativeLayout>

    <!--StartOfGame-->
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/startOfGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCountDown"
                android:layout_below="@id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </RelativeLayout>

    <!--EndOfGame-->
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/endOfGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/relativeLayout">
            <ImageView
                android:id="@+id/cup"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/star_cup"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tvLevelUp"
                android:layout_below="@+id/cup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/tvEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/tvLevelUp"
                android:textSize="18sp" />
            <Button
                android:id="@+id/btnGoBack"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEnd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/game_btn_go_back" />
        </RelativeLayout>

    </RelativeLayout>

    <!--QuestionAnswer-->
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/questionAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvQuestionAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <!--Answers-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvQuestionAnswer"
            android:fadeScrollbars="false" />



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGameSaveAnswer"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="@string/game_btn_save_answer" />
        </LinearLayout>


    </RelativeLayout>

    <!--ImageQuestionAnswer-->
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/imageQuestionAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvImageQuestionAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivImageQuestion"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvImageQuestionAnswer" />

        <!--Answers-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvImageQuestionAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivImageQuestion"
            android:fadeScrollbars="false" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSaveImageQuestionAnswer"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="@string/game_btn_save_answer" />
        </LinearLayout>
    </RelativeLayout>

    <!--QuestionImageAnswer-->
    <RelativeLayout
        android:background="#fff"
        android:id="@+id/questionImageAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvQuestionImageAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="#000"
            android:textSize="16sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvQuestionImageAnswers"
            android:layout_below="@+id/tvQuestionImageAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSaveQuestionImageAnswer"
                style="@style/ButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="@string/game_btn_save_answer" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>